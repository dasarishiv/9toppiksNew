<assembly>
    <id>ui-js</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <fileSets>
        <fileSet>
            <directory>${basedir}/bower_components</directory>
            <outputDirectory>bower_components</outputDirectory>
            <includes>
                <include>**/*.*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${resource-dir}/scripts</directory>
            <outputDirectory>scripts</outputDirectory>
            <includes>
                <include>**/*.*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${resource-dir}/images</directory>
            <outputDirectory>images</outputDirectory>
            <includes>
                <include>**/*.*</include>
            </includes>
        </fileSet>
		<fileSet>
            <directory>${resource-dir}/styles</directory>
            <outputDirectory>styles</outputDirectory>
            <includes>
                <include>**/*.*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${resource-dir}/views</directory>
            <outputDirectory>views</outputDirectory>
            <includes>
                <include>**/*.*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${resource-dir}</directory>
            <outputDirectory>.</outputDirectory>
            <includes>
                <include>*.*</include>
            </includes>
        </fileSet>
    </fileSets>      
</assembly>
