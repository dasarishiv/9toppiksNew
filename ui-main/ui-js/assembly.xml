<assembly>
    <id>ui-js</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <fileSets>
        <fileSet>
            <directory>${basedir}/src/main/resources/js</directory>
            <outputDirectory>js</outputDirectory>
            <includes>
                <include>**/*.*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/resources/css</directory>
            <outputDirectory>css</outputDirectory>
            <includes>
                <include>**/*.*</include>
            </includes>
        </fileSet>  
    </fileSets>      
</assembly>
